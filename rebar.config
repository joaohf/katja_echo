{plugins, [rebar3_lint,
           {rebar3_gpb_plugin, "2.12.5"}]}.

{alias, [
  {check, [xref,
          lint,
          {eunit, "-c"},
          {ct, "-c"},
          {cover, "-v --min_coverage=80"}]}
]}.

{gpb_opts, [
  {i, "proto"},
  {module_name_suffix, "_pb"},
  {o_erl, "src"},
  {o_hrl, "include"},
  {strings_as_binaries, true},
  type_specs,
  epb_compatibility]}.

{provider_hooks, [
  {pre, [{compile, {protobuf, compile}},
	 {clean, {protobuf, clean}}
	]}
]}.

{erl_opts, [
    {i, "./_build/default/plugins/gpb/include"}
]}.

{deps, [
    {gpb, "4.10.5"},
    {ranch, {git, "https://github.com/ninenines/ranch", {tag, "2.0.0-rc.3"}}}
]}.

{profiles, [
  {test, [
    {plugins, [coveralls]},
    {deps, [
        {katja, "0.10.0"}
    ]}
  ]}
]}.

{shell, [
    {config, "config/sys.config"},
    {apps, [katja_echo]}
]}.

{yrl_opts, [{verbose, true}]}.

{xrl_opts, [{verbose, true}]}.

{dialyzer, [
    {warnings, [no_return, error_handling]},
    {plt_apps, top_level_deps},
    {plt_extra_apps, []},
    {plt_location, local},
    {base_plt_apps, [erts, stdlib, kernel]},
    {base_plt_location, global}
]}.

{xref_checks, [undefined_function_calls,
               undefined_functions,
               deprecated_function_calls,
               deprecated_functions]}.

{xref_ignores, [katja_echo_pb,
                katja_echo_query_grammar,
                katja_echo_query_lexer]}.

{cover_enabled, true}.
{cover_export_enabled, true}.
{cover_excl_mods, [katja_echo_pb,
                   katja_echo_query_grammar,
                   katja_echo_query_lexer]}.

{coveralls_coverdata, "_build/test/cover/*.coverdata"}.
{coveralls_service_name, "travis-ci"}.

{edoc_opts, [
             {def, [
                    {version, "0.1.0"},
                    {years, "2020"}
                   ]}
            ]}.